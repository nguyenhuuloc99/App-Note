<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:layout_height="match_parent"
    tools:context=".Activity.Update_Activity">
    <androidx.appcompat.widget.Toolbar
        app:title="Update"
        android:id="@+id/toolbar"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/edt_title_update"
            android:padding="15dp"
            android:background="@drawable/edt_gb"
            android:fontFamily="@font/regular"
            android:hint="Title..."
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_subtitle_update"
            android:padding="15dp"
            android:background="@drawable/edt_gb"
            android:fontFamily="@font/regular"
            android:hint="Subtitle..."
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView

                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="16dp"
                android:text="Priortity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_red_update"
                android:src="@drawable/ic_baseline_done_24"
                android:layout_margin="10dp"
                android:background="@drawable/red_shape"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/img_yellow_update"
                android:layout_margin="10dp"
                android:background="@drawable/yellow_shape"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/img_green_update"
                android:layout_margin="10dp"
                android:background="@drawable/green_shape"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/notes_data_update"
            android:gravity="start"
            android:padding="15dp"
            android:background="@drawable/edt_gb"
            android:fontFamily="@font/regular"
            android:hint="Notes..."
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dont_note_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/red"
        android:src="@drawable/ic_baseline_done_24"/>
</RelativeLayout>
